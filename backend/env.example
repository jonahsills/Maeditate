# Database
DATABASE_URL=postgresql://user:password@localhost:5432/voicerecorder

# S3 Configuration
S3_REGION=us-east-1
S3_BUCKET=voice-recorder-audio
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
PUBLIC_CDN_BASE=https://your-bucket.s3.amazonaws.com

# AI Services
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key
STT_PROVIDER=whisper

# Security
JWT_SECRET=your_super_secret_jwt_key_here

# CORS
CORS_ORIGIN=https://base44.com,http://localhost:3000

# Server
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=120
TRANSCRIPT_RATE_LIMIT_MAX=10

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_AUDIO_DURATION_MINUTES=30
